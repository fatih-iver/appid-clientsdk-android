<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ibm.mobilefirstplatform.appid">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignInActivity"
            android:label="@string/title_activity_sign_in"
            android:theme="@android:style/Theme.Holo.Dialog"
            android:windowSoftInputMode="adjustResize|stateVisible" />
        <activity
            android:name=".TokensActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_tokens"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:theme="@android:style/Theme.Holo.Dialog"
            android:windowSoftInputMode="adjustResize|stateVisible" />
        <activity android:name=".SignUpSuccessActivity" />
        <activity android:name=".ConfirmationActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="cloudland.sign.up"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ForgotPasswordActivity"
            android:label="@string/title_activity_forgot_password"
            android:theme="@android:style/Theme.Holo.Dialog"
            android:windowSoftInputMode="adjustResize|stateVisible" />
        <activity android:name=".ForgotPasswordSuccessActivity" />
        <activity android:name=".ResetPasswordFormActivity"/>
        <activity android:name=".ResetPasswordActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="cloudland.reset.password" />
            </intent-filter>
        </activity>
    </application>


</manifest>